.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { text-align: center; }
}

.brand {
  position: relative;
  display: inline-block;

  padding: 0 80px;
  color: #8B00FB;
  /*background: rgba(255,255,255,0.55);*/
  line-height: 36px;
  font-weight: normal;
  font-family: 'Lobster Two', 'Monda', "PingFang SC", "Microsoft YaHei", sans-serif;
  border-bottom: none;
  &:hover { color:  #9F26EF; }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 56px;
  /*font-size: $logo-font-size;*/
  font-size: 48px;
  color:whitesmoke;
  font-weight: normal;
  font-family: $font-family-logo;
}

.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: $subtitle-color;
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
